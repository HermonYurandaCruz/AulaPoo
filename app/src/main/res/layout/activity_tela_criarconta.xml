<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCriarconta">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_nome"
        style="@style/TextoLogin"
        android:hint="Nome: "
        android:drawableEnd="@drawable/ic_user24"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"

        />




    <EditText
        android:id="@+id/et_novoEmail"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        android:hint="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:drawableRight="@drawable/ic_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_senha"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/et_novoEmail"
        android:hint="Senha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/et_confirmarSenha"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/et_senha"
        android:hint="Confirmar Senha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_Confirmar"
        style="@style/botao"
        android:onClick="AbrirTelaCategoria2"
        android:text="Confirmar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirmarSenha"
        android:layout_marginTop="10dp"

        />







</androidx.constraintlayout.widget.ConstraintLayout>